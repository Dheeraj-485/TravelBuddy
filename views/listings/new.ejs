<% layout("/layouts/boilerplate") -%>

<div class="row">
  <div class="col-8 offset-2">
    <h3>Create a New Listing</h3>
    <form
      method="POST"
      action="/listings"
      enctype="multipart/form-data"
      class="needs-validation"
      novalidate
    >
      <div class="mb-3">
        <lable for="title" class="form-label">Title</lable>
        <input
          name="listing[title]"
          placeholder="enter title"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <lable for="description" class="form-label">Description</lable>

        <textarea
          name="listing[description]"
          placeholder="enter description"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Please choose a Description</div>
      </div>
      <div class="mb-3">
        <lable for="image" class="form-label">Upload Listing Image</lable>

        <input name="listing[image]" type="file" class="form-control" />
      </div>
      <div class="row">
        <div class="mb-3 col-md-4">
          <lable for="price" class="form-label">Price</lable>

          <input
            name="listing[price]"
            placeholder="1200"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please choose Price</div>
        </div>
        <div class="mb-3 col-md-8">
          <lable for="country" class="form-label">Country</lable>

          <input
            class="form-control"
            name="listing[country]"
            placeholder="enter country"
            type="text"
            required
          />
          <div class="invalid-feedback">Please choose a Country</div>
        </div>
      </div>

      <div class="mb-3">
        <lable for="location" class="form-label">Location</lable>

        <input
          class="form-control"
          name="listing[location]"
          placeholder="enter location"
          type="text"
          required
        />
        <div class="invalid-feedback">Please choose a Location</div>
      </div>

      <button class="btn btn-dark add-btn">Add</button>
    </form>
  </div>
</div>
